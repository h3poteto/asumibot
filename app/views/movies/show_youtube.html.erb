<% content_for :title do %>
  <%= @youtube.title %>
<% end %>
<p id="notice"><%= notice %></p>
<div id="show_movie">
  <h3><%= link_to @youtube.title, @youtube.url, :target => "_blank" %></h3>
  <div class="movie">
    <iframe class="youtube-player" type="text/html" width="640" height="385" src="http://www.youtube.com/embed/<%= @id %>" frameborder="0">
    </iframe>
    <div class="description">
      <%= @youtube.description %>
    </div>
    <div class="buttons">
      <%= render 'movies/twitter_share' %>
    </div>
  </div>
</div>
